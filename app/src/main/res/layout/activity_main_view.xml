<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.draggridview.MainView"
    android:id="@+id/back"

    >

    <ImageView
        android:src="@drawable/homepagetitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:paddingTop="-50dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="142dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"

        >

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/add"
            android:id="@+id/NewLayout"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/linearLayout" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/mystyle"
            android:id="@+id/MyLayout"

            android:layout_alignTop="@+id/NewLayout"
            android:layout_centerHorizontal="true" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"
            android:id="@+id/t01"
            android:background="@drawable/newword"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/mystyleword"
            android:layout_toRightOf="@+id/t01"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:id="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        >

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/question"
        android:id="@+id/qustion"
        android:layout_marginTop="20dp"

        />
    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/use"
        android:id="@+id/use"
        android:layout_marginLeft="90dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:id="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"

            android:layout_marginTop="10dp"
            android:id="@+id/t03"
            android:background="@drawable/questionword"
            />
        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/useword"
            android:layout_toRightOf="@+id/t03"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/red"
        />
</RelativeLayout>
